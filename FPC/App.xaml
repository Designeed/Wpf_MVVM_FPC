<Application x:Class="FPC.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FPC"
             StartupUri="Views/Windows/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Infrastructure\Styles\Themes\LightColors.xaml"/>
                <ResourceDictionary Source="Infrastructure\Styles\Fonts.xaml"/>
                <ResourceDictionary Source="Infrastructure\Styles\Icons.xaml"/>

                <ResourceDictionary Source="Infrastructure\Styles\Buttons\DefaultButton.xaml"/>
                <ResourceDictionary Source="Infrastructure\Styles\Buttons\YellowButton.xaml"/>
                <ResourceDictionary Source="Infrastructure\Styles\Buttons\RedButton.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
